<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/nota1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/grey"
        android:gravity="center"
        android:hint="Nota 1"
        android:inputType="number"
        android:maxLength="2"
        android:padding="20dp" />

    <EditText
        android:id="@+id/nota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/grey"
        android:gravity="center"
        android:hint="Nota 2"
        android:inputType="number"
        android:maxLength="2"
        android:padding="20dp" />

    <EditText
        android:id="@+id/PesoNota1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nota1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/grey"
        android:gravity="center"
        android:hint="Peso nota 1"
        android:inputType="number"
        android:maxLength="1"
        android:padding="20dp" />

    <EditText
        android:id="@+id/PesoNota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nota2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/grey"
        android:gravity="center"
        android:hint="Peso nota 2"
        android:inputType="number"
        android:maxLength="1"
        android:padding="20dp" />

    <Button
        android:id="@+id/btCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_below="@id/PesoNota1"
        android:padding="20dp"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:layout_margin="30dp"
        />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btCalcular"
        android:gravity="center"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Resultado"/>

</RelativeLayout>